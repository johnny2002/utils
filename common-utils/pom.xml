		<artifactId>utils-parent</artifactId>
		<version>1.0.0-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>common-utils</artifactId>
	<version>1.0.0-SNAPSHOT</version>
