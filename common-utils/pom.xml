			<artifactId>commons-lang3</artifactId>
		</dependency>

		<!-- jdbc dependency -->
		<dependency>
			<groupId>com.oracle</groupId>
			<artifactId>ojdbc</artifactId>
			<version>11.2.0.3.0</version>
			<classifier>jdk6</classifier>
			<scope>provided</scope>
		</dependency>


